<odoo>
<template id="report_helpdesk_activity">
    <t t-call="report.html_container">

            <div class="page">
                    <!--<div class="header">-->
                        <div class="row">
                            <div class="col-xs-4 col-xs-offset-8">
                                <img t-att-src="'helpdesk_rhea/static/CompanyLogo.png'"/>
                            </div>
                        </div>
                    <!--</div>-->


                <h2>Helpdesk Activities</h2>

